<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="resource.domain.aggregate_root" class="App\Resource\Domain\AggregateRoot" public="true">
            <argument type="service" id="resource.infrastructure.adapter.repository.snapshot" />
            <argument type="service" id="resource.domain.factory.snapshot" />
        </service>

        <service id="resource.domain.factory.storage" class="App\Resource\Domain\Factory\StorageFactory" />

        <service id="resource.domain.factory.snapshot" class="App\Resource\Domain\Factory\SnapshotFactory">
            <argument type="service" id="resource.domain.factory.storage" />
        </service>
    </services>
</container>