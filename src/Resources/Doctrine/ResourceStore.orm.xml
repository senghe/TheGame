<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\ResourceStore" table="resource_store">
       <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="amount" type="integer" nullable="false" />
        <field name="increaseSpeed" type="integer" nullable="false" />
        <field name="maxAmount" type="integer" nullable="false" />
        <field name="updatedAt" type="datetime" nullable="false" />

        <one-to-one field="resource" target-entity="App\Entity\Resource" />
    </entity>
</doctrine-mapping>